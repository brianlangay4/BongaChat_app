<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEditMovieActivity"
    android:background="@color/primaryBlue"
    android:id="@+id/main_add_edit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/title_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD NEW MOVIE TO YOUR LIBRARY"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/dancingspirit"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOVIE NAME: "
            android:textStyle="italic"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/new_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New movie name"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:id="@+id/new_plot"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="Movie Description" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image_edit"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:src="@drawable/cinema"/>

        <TextView
            android:id="@+id/new_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Year"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom">

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add to library"
            android:layout_weight="2"
            android:onClick="submitButtonClicked"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:onClick="cancel"
            android:layout_weight="2"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>




